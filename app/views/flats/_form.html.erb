
<div class="container w-75 bg-white">
<%= simple_form_for @flat do | f | %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
     <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.input :picture %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-primary btn-sm" %>
  </div>
<% end %>
</div>
